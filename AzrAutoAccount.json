{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "2.0.0.0",
    "parameters": {
        "accountName": {
            "type": "String"
        },
        "location": {
            "type": "String"
        },
        "sampleGraphicalRunbookName": {
            "type": "String"
        },
        "sampleGraphicalRunbookDescription": {
            "type": "String"
        },
        "sampleGraphicalRunbookContentUri": {
            "type": "String"
        },
        "samplePowerShellRunbookName": {
            "type": "String"
        },
        "samplePowerShellRunbookDescription": {
            "type": "String"
        },
        "samplePowerShellRunbookContentUri": {
            "type": "String"
        },
        "classicSampleGraphicalRunbookName": {
            "type": "String"
        },
        "classicSampleGraphicalRunbookDescription": {
            "type": "String"
        },
        "classicSampleGraphicalRunbookContentUri": {
            "type": "String"
        },
        "classicSamplePowerShellRunbookName": {
            "type": "String"
        },
        "classicSamplePowerShellRunbookDescription": {
            "type": "String"
        },
        "classicSamplePowerShellRunbookContentUri": {
            "type": "String"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "name": "[parameters('accountName')]",
            "apiVersion": "2015-01-01-preview",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "sku": {
                    "name": "Free"
                }
            },
            "resources": [
                {
                    "type": "runbooks",
                    "name": "[parameters('sampleGraphicalRunbookName')]",
                    "apiVersion": "2015-01-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "properties": {
                        "runbookType": "GraphPowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "[parameters('sampleGraphicalRunbookDescription')]",
                        "publishContentLink": {
                            "uri": "[parameters('sampleGraphicalRunbookContentUri')]",
                            "version": "1.0.0.0"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ]
                },
                {
                    "type": "runbooks",
                    "name": "[parameters('samplePowerShellRunbookName')]",
                    "apiVersion": "2015-01-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "[parameters('samplePowerShellRunbookDescription')]",
                        "publishContentLink": {
                            "uri": "[parameters('samplePowerShellRunbookContentUri')]",
                            "version": "1.0.0.0"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ]
                },
                {
                    "type": "runbooks",
                    "name": "[parameters('classicSampleGraphicalRunbookName')]",
                    "apiVersion": "2015-01-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "properties": {
                        "runbookType": "GraphPowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "[parameters('classicSampleGraphicalRunbookDescription')]",
                        "publishContentLink": {
                            "uri": "[parameters('classicSampleGraphicalRunbookContentUri')]",
                            "version": "1.0.0.0"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ]
                },
                {
                    "type": "runbooks",
                    "name": "[parameters('classicSamplePowerShellRunbookName')]",
                    "apiVersion": "2015-01-01-preview",
                    "location": "[parameters('location')]",
                    "tags": {},
                    "properties": {
                        "runbookType": "PowerShell",
                        "logProgress": "false",
                        "logVerbose": "false",
                        "description": "[parameters('classicSamplePowerShellRunbookDescription')]",
                        "publishContentLink": {
                            "uri": "[parameters('classicSamplePowerShellRunbookContentUri')]",
                            "version": "1.0.0.0"
                        }
                    },
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('accountName'))]"
                    ]
                }
            ],
            "dependsOn": []
        }
    ]
}