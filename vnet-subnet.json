{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkSettings": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetworkSettings')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetworkSettings').addressPrefixes[0].addressPrefix]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[0].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[0].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[1].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[1].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[2].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[2].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[3].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[3].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[4].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[4].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[05].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[5].addressPrefix]"
                        }
                    },
                    {
                        "name": "[parameters('virtualNetworkSettings').subnets[6].name]",
                        "properties": {
                            "addressPrefix": "[parameters('virtualNetworkSettings').subnets[6].addressPrefix]"
                        }
                    }
                ]
            }
        }
    ]
}