{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "stdname": {
            "type": "String"
        },
        "premname": {
            "type": "String"
        }
    },
    "variables": {
        "storageAccountNameSTD": "[concat(uniquestring(resourceGroup().id), parameters('stdname'))]",
        "storageAccountNamePREM": "[concat(uniquestring(resourceGroup().id), parameters('premname'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "name": "(variables('storageAccountNameSTD')",
            "apiVersion": "2017-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "encryption": {
                    "services": {
                        "blob": {
                            "enabled": "false"
                        },
                        "file": {
                            "enabled": "false"
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "supportsHttpsTrafficOnly": "false"
            }
        },
        {
            "apiVersion": "2017-06-01",
            "name": "(variables('storageAccountNamePREM')",
            "location": "[resourceGroup().location]",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Premium_LRS"
            },
            "kind": "Storage",
            "properties": {
                "encryption": {
                    "services": {
                        "blob": {
                            "enabled": "false"
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "supportsHttpsTrafficOnly": "false"
            }
        }
    ]
}